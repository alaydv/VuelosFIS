<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vuelosfis.view.javafx.SeatSelectionController"
            fitToWidth="true" fitToHeight="true">

    <content>
        <VBox spacing="20" alignment="CENTER" styleClass="card" prefWidth="800" prefHeight="600">
            <Label text="Selecciona tu asiento" styleClass="header-label"/>

            <GridPane fx:id="seatGrid"
                      hgap="10"
                      vgap="10"
                      alignment="CENTER">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button text="â†" onAction="#handleBack" styleClass="secondary-button"/>
                <Button fx:id="confirmarButton" text="Confirmar asiento" styleClass="secondary-button"/>
                <Button fx:id="continuarButton" text="Continuar a reserva" styleClass="button"/>
            </HBox>
        </VBox>
    </content>
</ScrollPane>