<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
           fx:controller="com.vuelosfis.view.javafx.InvoiceController" 
           style="-fx-background-color: -fx-main-bg-color;">
    
    <VBox spacing="20" alignment="CENTER" maxWidth="500" maxHeight="700" styleClass="card">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <VBox alignment="CENTER" spacing="5">
            <Label text="DETALLE DE RESERVA" styleClass="subheader-label"/>
            <Label text="Factura de Vuelo" styleClass="header-label"/>
            <Separator prefWidth="200" style="-fx-padding: 10 0 10 0;"/>
        </VBox>

        <GridPane hgap="15" vgap="12">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="200" halignment="LEFT" />
            </columnConstraints>

            <Label text="Pasajero:" styleClass="label-bold" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="pasajeroLabel" styleClass="label-value" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Documento:" styleClass="label-bold" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="documentoLabel" styleClass="label-value" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Vuelo:" styleClass="label-bold" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="vueloLabel" styleClass="label-value" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Ruta:" styleClass="label-bold" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="rutaLabel" styleClass="label-value" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Fecha Vuelo:" styleClass="label-bold" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="fechaVueloLabel" styleClass="label-value" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Asiento:" styleClass="label-bold" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="asientoLabel" styleClass="label-value" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            
            <Label text="Pago:" styleClass="label-bold" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <Label fx:id="metodoPagoLabel" styleClass="label-value" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </GridPane>

        <Separator/>

        <VBox spacing="8" VBox.vgrow="ALWAYS">
            <Label text="Servicios adicionales" styleClass="label-bold"/>
            <TextArea fx:id="serviciosTextArea" editable="false" wrapText="true" 
                      prefHeight="100" styleClass="invoice-text-area"/>
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-padding: 10 0 0 0;">
            <Label text="TOTAL A PAGAR:" styleClass="label-total-title"/>
            <Label fx:id="totalLabel" styleClass="label-total-value"/>
        </HBox>

        <Label fx:id="fechaEmisionLabel" style="-fx-font-size: 11; -fx-text-fill: gray;"/>

        <Button text="GUARDAR Y SALIR" fx:id="finalizarButton" styleClass="button" maxWidth="Infinity"/>
    </VBox>
</StackPane>